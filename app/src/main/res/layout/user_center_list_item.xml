<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="left|center">

<android.support.v7.widget.CardView
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:layout_marginBottom="4dp"
	android:layout_marginRight="4dp"
	android:layout_marginLeft="4dp"
	card_view:cardElevation="4dp">

	<RelativeLayout
		android:id="@+id/usercenterlistitemLinearLayout1"
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:layout_marginLeft="7dp"
		android:layout_marginRight="10dp"
		android:gravity="left|center">

		<ImageView
			android:id="@+id/user_center_item_img"
			android:layout_marginTop="10dp"
			android:layout_width="85dp"
			android:layout_height="85dp"
			android:layout_marginLeft="3dp"
			android:contentDescription="asda"
			android:scaleType="centerCrop"/>

		<TextView
			android:id="@+id/user_center_item_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="false"
			android:textColor="#404040"
			android:textSize="16.0sp"
			android:maxLines="2"
			android:layout_centerInParent="false"
			android:layout_marginLeft="100dp"
			android:layout_marginTop="10dp"
			android:minLines="2"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="none"
			android:layout_marginTop="3dp"
			android:id="@+id/itemMainSummary"
			android:maxLines="2"
			android:layout_alignLeft="@id/user_center_item_txt"
			android:layout_below="@id/user_center_item_txt"
			android:textSize="12sp"
			android:textColor="#5B5B5B"/>

		<RelativeLayout
			android:layout_height="20dp"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:id="@+id/userCenterlinearLayout"
			android:layout_below="@+id/user_center_item_img"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true">


			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="150dp"
				android:maxLines="1"
				android:padding="3dp"
				android:id="@+id/mainlayoutitemTextView1"
				android:textSize="9dp"
				android:text="2015年12月12日 下午10:43:43"
				android:layout_alignTop="@+id/usercenterlistitemUserIdTextView1"/>


			<TextView
				android:layout_height="wrap_content"
				android:text="用户"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="50dp"
				android:gravity="right"
				android:textSize="8sp"
				android:maxLines="1"
				android:padding="3dp"
				android:textColor="#7A7A7A"
				android:id="@+id/usercenterlistitemUserIdTextView1"
				android:layout_alignTop="@+id/userCenterUserLinearLayoutut2"
				android:layout_toLeftOf="@+id/userCenterUserLinearLayoutut2"
				android:layout_toStartOf="@+id/userCenterUserLinearLayoutut2" />

			<LinearLayout
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_width="50dp"
				android:layout_centerHorizontal="true"
				android:layout_alignParentBottom="true"
				android:id="@+id/linearLayout4">
				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:gravity="center"
					android:textSize="8sp"
					android:padding="3dp"
					android:id="@+id/usercenterlistitemUserClassTextView1"/>
			</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:gravity="right"
			android:layout_width="35dp"
			android:layout_marginLeft="5dp"
			android:id="@+id/userCenterUserLinearLayoutut2"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true">

			<TextView
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:gravity="center"
				android:textSize="8sp"
				android:padding="3dp"
				android:id="@+id/usercenterlistitemUserlevelTextView1"/>
		</LinearLayout>


		</RelativeLayout>

	</RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>
